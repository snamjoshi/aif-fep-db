}

@article {Zhang2021.12.10.472142,
	author = {Zhang, Yisi S. and Takahashi, Daniel Y. and El Hady, Ahmed and Liao, Diana A. and Ghazanfar, Asif A.},
	title = {Active neural coordination of motor behaviors with internal states},
	elocation-id = {2021.12.10.472142},
	year = {2022},
	doi = {10.1101/2021.12.10.472142},
	publisher = {Cold Spring Harbor Laboratory},
	abstract = {The brain continuously coordinates skeletomuscular movements with internal physiological states like arousal, but how is this coordination achieved? One possibility is that brain simply reacts to changes in external and/or internal signals. Another possibility is that it is actively coordinating both external and internal activities. We used functional ultrasound imaging to capture a large medial section of the brain, including multiple cortical and subcortical areas, in marmoset monkeys while monitoring their spontaneous movements and cardiac activity. By analyzing the causal ordering of these different time-series, we found that information flowing from the brain to movements and heart rate fluctuations were significantly greater than in the opposite direction. The brain areas involved in this external versus internal coordination were spatially distinct but also extensively interconnected. Temporally, the brain alternated between network states for this regulation. These findings suggest that the brain{\textquoteright}s dynamics actively and efficiently coordinate motor behavior with internal physiology.Competing Interest StatementThe authors have declared no competing interest.},
	URL = {https://www.biorxiv.org/content/early/2022/06/28/2021.12.10.472142},
	eprint = {https://www.biorxiv.org/content/early/2022/06/28/2021.12.10.472142.full.pdf},
